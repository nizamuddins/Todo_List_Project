<%- include('partials/header1') %>
<% if(message.length >0){ %>
	<div class="alert" style="background-color: rgb(183, 95, 95);border-radius: 0%;font-size: 1.1rem;font-weight: 400;">
		<%= message[0].message %>
  
	</div>
  
<%}%>
<div class="container mt-5">
  <h1>Login</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group" >
              <label for="text">UserName</label>
              <input type="text" class="form-control" name="username" style="border: 2px solid rgb(231, 220, 220);height: 35px;text-align: left;text-decoration: none;font-weight: 400;font-size: 1rem;">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
            
          </form>
      
        </div>
        <form action="/signup" method="get">
          <button type="submit" class="btn btn-dark " style="margin:5px 0px 5px 19px">SignUp</button>
        </form>
      </div>
    </div>
  
    
  </div>
</div>

<%- include('partials/footer1') %>
